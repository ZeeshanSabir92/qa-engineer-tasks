{
  "name": "qa-engineer-tasks",
  "version": "1.0.0",
  "description": "Krieger Digital QA Engineer Test task",
  "main": "index.js",
  "scripts": {
    "pet-api-test": "npx playwright test petstore.test.js",
    "sofa-e2e": "npx playwright test --headed --project=chromium --workers 1",
    "show-report": "npx playwright show-report"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "faker": "^5.5.3",
    "playwright": "^1.16.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "allure-playwright": "^3.0.0-beta.3",
    "jest": "^27.4.3",
    "jest-html-reporter": "^3.4.0",
    "jest-playwright-preset": "^1.6.2"
  },
  "jest": {
    "preset": "jest-playwright-preset",
    "testMatch": [
      "**/src/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "reports/test-report.html",
          "includeFailureMsg": true
        }
      ]
    ]
  }
}
